{
  "name": "react-animated-switch",
  "version": "0.0.15",
  "description": "A customizable toggle-switch component for React",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run copy",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "prettier": "prettier --write \"{src,tests,example/src}/**/*.{js,ts,jsx,tsx}\"",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run prettier && npm run lint",
    "copy": "npm run copy:esm && npm run copy:cjs",
    "copy:esm": "copyfiles -u 1 src/components/**/*.module.css dist/esm",
    "copy:cjs": "copyfiles -u 1 src/components/**/*.module.css dist/cjs"
  },
  "keywords": [
    "switch",
    "toggle",
    "toggle-button",
    "toggle-switch",
    "checkbox",
    "react",
    "react-component",
    "animated"
  ],
  "author": "Waseem6409",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Waseem6409/react-animated-switch.git"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.10.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.0.12",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.36.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.9.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "ts-jest": "^29.2.5",
    "typescript": "^4.7.3",
    "typescript-plugin-css-modules": "^5.1.0"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}
